{
  "name": "chopstack",
  "version": "0.1.0",
  "description": "Chop massive AI changes into clean, reviewable PR stacks - AI-powered parallel Git workflows with intelligent task decomposition",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap",
    "build:watch": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap --watch",
    "commit": "bun --filter commitment run commit",
    "dev:mcp": "bun --watch src/index.ts",
    "dev:mcp-inspect": "bun x fastmcp dev src/index.ts",
    "inspect:mcp": "bun x fastmcp inspect src/index.ts",
    "clean": "rm -rf dist",
    "start:mcp": "bun dist/index.js",
    "lint": "bun run type-check && bun run format:check && eslint .",
    "lint:fix": "bun run format && eslint . --fix",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test src/**/*.test.ts",
    "test:integration": "bun test src/**/*.integration.test.ts",
    "test:e2e": "bun test test/e2e/**/*.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run clean && bun run build",
    "prepare": "husky",
    "knip": "knip"
  },
  "keywords": [
    "chopstack",
    "mcp",
    "ai",
    "git",
    "workflow",
    "parallel",
    "stacked-prs",
    "code-review",
    "typescript",
    "pr-automation",
    "git-worktree"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.111",
    "@eslint/js": "^9.15.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-perfectionist": "^4.1.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "knip": "^5.66.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rulesync": "^1.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.4",
    "chalk": "^5.6.2",
    "commitment": "link:../commitment",
    "dayjs": "^1.11.18",
    "execa": "^9.6.0",
    "fastmcp": "^3.16.0",
    "ora": "^9.0.0",
    "simple-git": "^3.28.0",
    "ts-pattern": "^5.8.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.4"
  }
}
