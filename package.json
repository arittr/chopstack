{
  "name": "chopstack",
  "version": "0.1.0",
  "description": "Chop massive AI changes into clean, reviewable PR stacks - AI-powered parallel Git workflows with intelligent task decomposition",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "chopstack": "./dist/bin/chopstack.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup --dts",
    "build:watch": "tsup --watch",
    "dev": "tsx watch src/bin/chopstack.ts",
    "dev:run": "tsx src/bin/chopstack.ts",
    "dev:lib": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --inspect src/bin/chopstack.ts",
    "dev:mcp": "fastmcp dev src/index.ts",
    "inspect:mcp": "fastmcp inspect src/index.ts",
    "clean": "rm -rf dist",
    "start": "node dist/bin/chopstack.js",
    "start:mcp": "node dist/index.js",
    "lint": "pnpm run type-check && pnpm run format:check && eslint .",
    "lint:fix": "pnpm run format && eslint . --fix",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest test/e2e",
    "test:execution": "jest test/execution/orchestration-decisions.test.ts",
    "test:unit": "jest src",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky"
  },
  "keywords": [
    "chopstack",
    "mcp",
    "ai",
    "git",
    "workflow",
    "parallel",
    "stacked-prs",
    "code-review",
    "typescript",
    "pr-automation",
    "git-worktree"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.111",
    "@eslint/js": "^9.15.0",
    "@types/graphlib": "^2.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^4.1.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.4",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fastmcp": "^3.16.0",
    "ts-pattern": "^5.8.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.4"
  }
}
