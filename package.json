{
  "name": "chopstack",
  "version": "0.1.0",
  "description": "Chop massive AI changes into clean, reviewable PR stacks - AI-powered parallel Git workflows with intelligent task decomposition",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bin/chopstack": "./dist/bin/chopstack.js"
  },
  "bin": {
    "chopstack": "./dist/bin/chopstack.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "commit": "pnpm build && ./dist/bin/chopstack.js stack --verbose",
    "dev": "tsx watch src/entry/cli/chopstack.ts",
    "dev:run": "tsx src/entry/cli/chopstack.ts",
    "dev:lib": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --inspect src/entry/cli/chopstack.ts",
    "dev:mcp": "fastmcp dev src/index.ts",
    "inspect:mcp": "fastmcp inspect src/index.ts",
    "clean": "rm -rf dist",
    "start": "node dist/bin/chopstack.js",
    "start:mcp": "node dist/index.js",
    "lint": "pnpm run type-check && pnpm run format:check && eslint .",
    "lint:fix": "pnpm run format && eslint . --fix",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "type-check": "tsc --noEmit",
    "rulesync:generate": "rulesync import --targets claudecode --features \"*\" && rulesync generate",
    "test": "vitest --run",
    "test:clean": "rimraf ./test/tmp/*",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --project=integration --run",
    "test:unit": "vitest --project=unit --run",
    "test:e2e": "vitest --project=e2e --run",
    "test:execution": "vitest --project=execution --run",
    "test:repo": "node dist/bin/chopstack.js run --plan ./test/e2e/specs/add-dark-mode-v3.yaml --mode execute --vcs-mode stacked --agent claude --write-log --target-dir ../typescript-nextjs-starter",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky"
  },
  "keywords": [
    "chopstack",
    "mcp",
    "ai",
    "git",
    "workflow",
    "parallel",
    "stacked-prs",
    "code-review",
    "typescript",
    "pr-automation",
    "git-worktree"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.111",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.15.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/graphlib": "^2.1.12",
    "@types/ink-spinner": "^3.0.5",
    "@types/ink-testing-library": "^1.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-perfectionist": "^4.1.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "jiti": "^2.6.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rulesync": "^1.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.4",
    "@inkjs/ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "dayjs": "^1.11.18",
    "execa": "^9.6.0",
    "fastmcp": "^3.16.0",
    "ink": "^6.3.1",
    "ink-spinner": "^5.0.0",
    "ora": "^9.0.0",
    "react": "^19.1.1",
    "simple-git": "^3.28.0",
    "ts-pattern": "^5.8.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.4"
  }
}
