{
  "compilerOptions": {
    /* Language & libs */
    "target": "ES2022",
    "lib": ["ES2022"],
    /* Bundler-style ESM build for tsup */
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    /* Path alias for internal modules */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    /* Declarations & maps */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* Strictness */
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    /* Interop & per-file safety */
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    /* Performance */
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    /* Node types */
    "types": ["node", "bun-types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "src/**/*.cts",
    "test/**/*.ts",
    "test/**/*.tsx",
    "tools/**/*.ts",
    "*.config.ts",
    "*.config.mts",
    "eslint.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".chopstack",
    "test/tmp",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs"
  ]
}
